{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@lib/functions/*": ["./src/lib/functions/*"],
      "@lib/types/*": ["./src/lib/types/*"],
      "@test/*": ["./src/test/*"]
    },
    "allowJs": true
  },
  "include": ["./src", "./src/test"],
  "exclude": ["./dist"],
}
